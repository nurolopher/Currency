<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gridLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.00"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtCurrencyLeft"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/usd"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imgBtnToggle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/ic_dialog_switch"
            android:contentDescription="@string/toggle" />

        <TextView
            android:id="@+id/txtCurrencyRight"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/som"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

    </LinearLayout>

    <EditText
        android:id="@+id/edtTxtFrom"
        style="@style/EditTextAppTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/edtTxtTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textIsSelectable="true"
        android:textSelectHandle="@drawable/apptheme_text_select_handle_middle"
        android:textSelectHandleLeft="@drawable/apptheme_text_select_handle_left"
        android:textSelectHandleRight="@drawable/apptheme_text_select_handle_right" />
</LinearLayout>